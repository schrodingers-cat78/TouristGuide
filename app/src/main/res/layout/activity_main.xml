<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:background="@drawable/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context="com.example.Tourist_Guide_Main.MainActivity">

        <Button
            android:id="@+id/mainpagebutton2"
            android:layout_width="370dp"
            android:layout_height="94dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="179dp"
            android:background="@drawable/round"
            android:text="Search Transport Medium"
            android:textColor="#ADD8E6"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />


        <Button
            android:id="@+id/mainpagebutton1"
            android:layout_width="373dp"
            android:layout_height="76dp"
            android:layout_above="@+id/mainpagebutton2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="144dp"
            android:background="@drawable/round"
            android:text="Phrases"
            android:textColor="#ADD8E6"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:ignore="NotSibling,TextContrastCheck" />

    </RelativeLayout>


    <TextView
        android:id="@+id/mainpagetextView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#0080ff"
        android:gravity="center"
        android:text="Travel Guide"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        tools:ignore="NotSibling" />



</androidx.constraintlayout.widget.ConstraintLayout>